<!DOCTYPE html>
<html>
<head>
  <title>Bookmarker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<ul>
  <% if signed_in? %>
  <li><%= link_to 'プロフィール', current_user %></li>
  <li><%= link_to 'ログアウト', signout_path, method: :delete %></li>
  <li><%= link_to 'ブックマーク追加', controller: "bookmarks", action: "new", user_id: @current_user.id %></li>
  <li><%= link_to 'ブックマーク一覧', controller: "bookmarks", action: "bookmark_list", user_id: @current_user.id %></li>
  <% else %>
  <li><%= link_to 'ログイン', signin_path %></li>
  <li><%= link_to 'アカウント作成', signup_path %></li>
  <% end %>
</ul>

<hr>


<%= yield %>

</body>
</html>
